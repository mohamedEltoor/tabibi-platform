{
    "version": 2,
    "rewrites": [
        {
            "source": "/api/(.*)",
            "destination": "/server/src/index.js"
        },
        {
            "source": "/(.*)",
            "destination": "/client/$1"
        }
    ],
    "functions": {
        "server/src/index.js": {
            "includeFiles": "server/src/**"
        }
    }
}